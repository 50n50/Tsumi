<?xml version='1.0' encoding='utf-8'?>
<widget version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <access origin="*" />
  
  <feature name="ApkUpdater">
    <param name="android-package" value="de.kolbasa.apkupdater.ApkUpdater"/>
  </feature>

  <feature name="AndroidFullScreen">
    <param name="android-package" value="com.mesmotronic.plugins.FullScreenPlugin"/>
  </feature>

  <feature name="PictureInPicture">
    <param name="android-package" value="cordova.plugin.pip.PictureInPicture"/>
  </feature>

  <feature name="SaveDialog">
    <param name="android-package" value="io.github.amphiluke.SaveDialog"/>
  </feature>

  <feature name="CDVOrientation">
    <param name="android-package" value="cordova.plugins.screenorientation.CDVOrientation"/>
  </feature>

  <feature name="SecureLoggerPlugin">
    <param name="android-package" value="com.obsidize.secure.logger.SecureLoggerPlugin"/>
    <param name="onload" value="true"/>
  </feature>

  
</widget>